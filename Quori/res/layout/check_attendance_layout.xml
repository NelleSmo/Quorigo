<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"/>

    <Space
        android:id="@+id/Space3"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Space
        android:id="@+id/Space4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp_nameTextView"
        android:layout_below="@+id/Space3"
        android:layout_marginTop="61dp" />

    <TextView
        android:id="@+id/sp_nameTextView"
        android:layout_width="260dp"
        android:layout_height="98dp"
        android:layout_alignRight="@+id/checkinbtn"
        android:layout_alignTop="@+id/display"
        android:text="@string/CheckAttendanceInstructionString"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/checkinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_nameTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bluebutton"
        android:padding="0dp"
        android:text="@string/CheckInButtonLabel" />
<!--  -->

    <Button
        android:id="@+id/checkoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkinbtn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bluebutton"
        android:padding="0dp"
        android:text="@string/checkout" />

</RelativeLayout>